extends layout

block content
	h1= gengo(title)
	h2 #{gengo("エクスプレスへようこそ")}
	h4 #{gengo('今日は%sです。', moment().format('dddd'))}
	h4 #{gengo('%sを持っていません。', numeral(10000).format('$0,0.00'))}
	button(onclick="locale().set('ja');") Japanese
	button(onclick="locale().set('en_US');") English
	button(onclick="locale().reset();") Reset
	script(src='/javascripts/locale.js')



